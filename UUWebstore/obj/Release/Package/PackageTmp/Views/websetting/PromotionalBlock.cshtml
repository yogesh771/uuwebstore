@model UUWebstore.Models.promotionalBlockClass

@{
    ViewBag.Title = "PromotionalBlock";
    Layout = "~/Views/Shared/_LayoutInternal.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Promotional Block</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class = "control-label col-md-2">promotional Block</label>   
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.promotionalBlock, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.promotionalBlock, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@{ var d = "";
    if (ViewBag.message != null)
    {
        d = ViewBag.message.ToString();
    }

}

<script>
    debugger
    if ('@d'!= '')
    {
        bootbox.alert({
            title: "Confirmation !",
            message: '@d'
        });
    }
</script>
