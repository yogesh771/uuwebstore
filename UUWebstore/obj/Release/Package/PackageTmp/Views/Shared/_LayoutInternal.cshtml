<script>
    function fillState()
    {
        var countryID = $('#countryId').val();
        if (countryID != "")
        {

              $.ajax({
                  url: '@BaseUtil.GetApplicationPath()' + '/users/fillState',
            type: 'GET',
            data: { 'countryID': countryID },
            success: function (result) {

                $("#stateId").html("");
                $("#stateId").append($('<option></option>').val('').html(' State'));
                $.each($.parseJSON(result), function (i, VSC) {
                    $("#stateId").append($('<option></option>').val(VSC.stateId).html(VSC.name))
                })

            },
            error: function () {

                bootbox.alert({
                    title: "Alert !",
                    message: '<p>Whooaaa! Something went wrong..</p>',
                    timeOut: 2000

                });
            },
            });
        }
    }

    function fillCity()
    {
        var stateId = $('#stateId').val();
        if (stateId != "") {

            $.ajax({
                url: '@BaseUtil.GetApplicationPath()' + '/users/fillCity',
                type: 'GET',
                data: { 'stateId': stateId },
                success: function (result) {

                    $("#cityId").html("");
                    $("#cityId").append($('<option></option>').val('').html(' City'));
                    $.each($.parseJSON(result), function (i, VSC) {
                        $("#cityId").append($('<option></option>').val(VSC.cityId).html(VSC.CityName))
                    })

                },
                error: function () {

                    bootbox.alert({
                        title: "Alert !",
                        message: '<p>Whooaaa! Something went wrong..</p>',
                        timeOut: 2000

                    });
                },
            });
        }
    }
</script>
