@model UUWebstore.Models.LoginIdViewModel
@{
    ViewBag.Title = "login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Please Sign In</h3>
            </div>
            <div class="panel-body">              
                    <fieldset>
                        @using (Html.BeginForm("Login", "account", null, FormMethod.Post))
                        {
                           
                            <span class="has-error">@ViewBag.message</span>
                            <div class="form-group">                              
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email"  })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "has-error" })
                                @*<span class="has-error">Error message</span>*@
                            </div>
                            <div class="form-group">                               
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "has-error" })
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                </label>
                            </div>
                            <a href="@Url.Action("forgot_password","Account")" title="" class="forgot">Forgot Password</a>
                            <div class="btn-block"><button type="submit" class="btn btn-lg btn-success btn-block">Sign in</button></div>

                        }
                      
                    </fieldset>
              
            </div>
        </div>
    </div>
</div>
