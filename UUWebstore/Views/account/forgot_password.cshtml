@model UUWebstore.Models.forgotPassword
@{
    ViewBag.Title = "forgot_password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Forgot Password</h3>
            </div>
            <div class="panel-body">
                <fieldset>

                    <div class="form-group">
                        <input type="text" placeholder="Email address" id="txtEmailAddress" />
                    </div>                 
                    <div class="btn-block"><button  class="btn btn-lg btn-success btn-block" onclick="SendEmail()">Send Mail</button></div>

                </fieldset>

            </div>
        </div>
    </div>
</div>
<script>
    function SendEmail()
    {
        var txtEmailAddress = $("#txtEmailAddress").val();
             debugger
                    $.ajax({
                        url: '/account/sendLinkToMail',
                        type: 'POST',
                        data: { 'EmailAddress': txtEmailAddress},
                        success: function (data) {
                            debugger
                            if(data=="ok")
                            {
                                bootbox.alert({
                                    title: "Success !",
                                    message: '<p>Email has been send to your email address</p>',                                   
                                });

                            }
                        },
                        error: function () {
                            bootbox.alert({
                                title: "Alert !",
                                message: '<p>Whooaaa! Something went wrong..</p>',
                                timeOut: 2000

                            });

                        }
                    });
          

    }
</script>